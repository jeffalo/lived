{
	"name": "lived",
	"displayName": "lived",
	"description": "Quickly start a local development server for static pages.",
	"icon": "images/icon.png",
	"version": "0.4.4",
	"publisher": "jeffalo",
	"repository": "https://github.com/jeffalo/lived",
	"galleryBanner": {
		"color": "#85004f",
		"theme": "dark"
	},
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"html preview",
		"live preview",
		"open in browser",
		"multi-root ready"
	],
	"activationEvents": [
		"*"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "lived.start",
				"title": "Start a live server"
			},
			{
				"command": "lived.stop",
				"title": "Stop a live server"
			},
			{
				"command": "lived.refreshList",
				"title": "Refresh",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "lived.deleteEntry",
				"title": "Stop"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "serverList",
					"name": "Server List"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "lived.refreshList",
					"when": "view == serverList",
					"group": "navigation"
				},
				{
					"command": "lived.start",
					"when": "view == serverList"
				}
			],
			"view/item/context": [
				{
					"command": "lived.deleteEntry",
					"when": "view == serverList"
				}
			],
			"commandPalette": [
				{
					"command": "lived.deleteEntry",
					"when": "false"
				},
				{
					"command": "lived.refreshList",
					"when": "false"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "serverList",
				"contents": "No live servers running.\n[Start a live server](command:lived.start)"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.15.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	},
	"dependencies": {
		"detect-port": "^1.3.0",
		"express": "^4.17.1",
		"express-ws": "^4.0.0",
		"jsdom": "^16.4.0",
		"vsls": "^1.0.3015"
	}
}
